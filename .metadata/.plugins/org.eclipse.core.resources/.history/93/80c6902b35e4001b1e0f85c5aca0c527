
public class MinValueRowMax {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[][] bc= {{2,4,5},{3,0,7},{1,2,9}};
		int min=bc[0][0];
		for(int i=0;i<bc.length;i++)
		{
			for(int j=0;j<bc[i].length;j++)
			{
				min=bc[i][j];
			}
		}
		System.out.println(min);

	}

}
